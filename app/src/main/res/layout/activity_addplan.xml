<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPlan">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/tv_form_1"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:gravity="center_vertical"
            android:text="@string/todo_title_1"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_form_1"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:ems="50"
            android:hint="@string/todo_title_1"
            android:importantForAutofill="no"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/tv_form_2"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_below="@+id/et_title"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:gravity="center_vertical"
            android:text="@string/todo_title_2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_startpage"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_form_2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/et_form_1" />

        <EditText
            android:id="@+id/et_gold"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_form_2"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/tv_startpage"
            android:ems="10"
            android:hint="@string/et_form"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/tv_page"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_form_2"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/et_gold"
            android:gravity="center"
            android:text="@string/et_form_2" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_form_2"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@+id/tv_page"
            android:entries="@array/todo_form" />

        <TextView
            android:id="@+id/tv_form_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_startpage"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:gravity="center_vertical"
            android:text="@string/todo_title_3"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_form_3"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:text="@string/btn_deadline" />

    </RelativeLayout>

    <include
        android:id="@+id/toolbar"
        layout="@layout/include_toolbar"/>
</android.support.constraint.ConstraintLayout>